Estructura = pd.DataFrame({
    'Tamiz':Tamiz,
    'Abertura' : Abertura,
    'Retenido (g)' : Retenido,
    'Retenido_acumulado (g)' : Retenido_Acumulado,
    'Pasa_tamiz (g)' : Pasa_tamiz,
    'Porcentaje_pasa_tamiz (%)' : (Pasa_tamiz/2900)*100
})

round(Estructura,2)
