    2900 - 2667,                                # 2900 = Peso total de la muestra (g) menos peso retenido acumulado (g)
    2900 - 2762,                                # 2900 = Peso total de la muestra (g) menos peso retenido acumulado (g)
    2900 - 2815,                                # 2900 = Peso total de la muestra (g) menos peso retenido acumulado (g)
    2900 - 2833,                                # 2900 = Peso total de la muestra (g) menos peso retenido acumulado (g)
