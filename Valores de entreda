    'Nº 20',                         # Numero de malla
    'Nº 40',                         # Numero de malla
    'Nº 60',                         # Numero de malla
    'Nº 100',                        # Numero de malla
    'Nº 200'                         # Numero de malla
])

Abertura =pd.Series([                # Numero de abertura en mm
