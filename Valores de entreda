Retenido_Acumulado =pd.Series([              # Peso retenido acumulado en gramos
    0,                                       # Peso retenido acumulado en gramos
    0 + 1,                                   # Peso retenido acumulado en gramos más retenido en gramos
    1 + 0,                                   # Peso retenido acumulado en gramos más retenido en gramos
